<div class="row">
  <center>
    <h1><%=current_user.name%></h1>
    <div class="round-corners">
      <img src=<%="http://graph.facebook.com/#{current_user.uid}/picture?type=large"%>>
    </div>
  </center>
</div>

<div class="row">

  <div class="col-xs-4 text-center">
    <h2>Authored</h2>
    <% @authored.each do |haiku| %>
      <br>
      <%= render partial: 'haikus/show', locals: {haiku: haiku} %>
    <% end %>
  </div>

  <div class="col-xs-4 text-center">
    <h2>Favorites</h2>
  </div>

  <div class="col-xs-4 text-center">
    <h2>Recently Liked</h2>
    <% @liked.each do |haiku| %>
      <br>
      <%= render partial: 'haikus/show', locals: {haiku: haiku} %>
    <% end %>
  </div>
</div>
